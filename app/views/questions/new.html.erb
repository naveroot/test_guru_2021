<h1>Create New Question</h1>

<form action="/tests/<%= params[:test_id] %>/questions" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <p>
    <label for="question-body">Title:</label>
    <input type="text" name="question[body]" id="question-id">
  </p>

   <p><button type="submit">Create question</button></p>
</form>